<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity"
    android:orientation="vertical"
    android:gravity="top"
    android:padding="24dp"
    android:background="#F5F5F5"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Homepage"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="60dp" />

    <!-- Welcome Text with Username in Horizontal Layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:layout_marginBottom="2dp">

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome "
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Username Text -->
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="#6200EE"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Email Activation Text in Horizontal Layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:layout_marginBottom="2dp">

        <TextView
            android:id="@+id/tv_email_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your "
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:textSize="16sp"
            android:textColor="#6200EE" />

        <TextView
            android:id="@+id/tv_email_activated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" has been activated"
            android:textSize="16sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Phone Registration Text in Horizontal Layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="start">

        <TextView
            android:id="@+id/tv_phone_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your "
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone"
            android:textSize="16sp"
            android:textColor="#6200EE" />

        <TextView
            android:id="@+id/tv_phone_registered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" has been registered"
            android:textSize="16sp"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>